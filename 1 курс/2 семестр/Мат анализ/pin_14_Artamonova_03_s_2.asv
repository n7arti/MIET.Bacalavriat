clc
clear
%ex1
syms n
hold on
Sn = 0;
an = input('¬ведите общий член последовательности: ');
n0 = input('¬ведите число рассматриваемых членов: ');
for i = 1:1:n0;
    Sn = Sn + subs(an,'n',i);
    plot(i,Sn,'r*')
end
grid on
