%ex2
clear
syms n
figure(2)
hold on
q = input('¬ведите значение q: ');
f0 = q;
fn = q^2;
Sn = q + q^2;
if limit(q.^n)==0
    while f0-fn>0.00001
        f0 = fn;
       for n = 3:1:10000
           fn = q.^n;
           Sn = Sn + fn;
           plot(i,Sn,'r*')
       end
    end
end